<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_2"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidmannagg.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="1dp"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/nomeeventolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:text="Nome Evento" />
        
         <EditText
             android:id="@+id/nomeevento"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="18dp"
             android:ems="10"
             android:inputType="textPersonName" >

       <requestFocus />
    	</EditText>
    	
         <TextView
        android:id="@+id/dataeventolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:text="Data" />
        
         <EditText
             android:id="@+id/dataevento"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="18dp"
             android:ems="10"
             android:inputType="textPersonName" >

    	</EditText>

         <TextView
             android:id="@+id/cittalabel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="15dp"
             android:layout_marginTop="23dp"
             android:text="CittÃ " />

         <EditText
             android:id="@+id/citta"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:ems="10"
             android:inputType="textPersonName" >

             
         </EditText>
         
         <TextView
             android:id="@+id/luogolabel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="15dp"
             android:layout_marginTop="23dp"
             android:text="Luogo" />

         <EditText
             android:id="@+id/luogo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:ems="10"
             android:inputType="textPersonName" >

             
         </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/aggiungi"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="#d9e9f5"
        android:textColor="#005ca4"
        android:text="Aggiungi" />

</RelativeLayout>